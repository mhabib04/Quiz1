<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#BCA37F"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etNamaPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Pelanggan"
        android:inputType="textCapSentences"
        android:paddingBottom="20dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipe Pelanggan : "
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>

        <RadioGroup
            android:orientation="horizontal"
            android:layout_height="50dp"
            >

            <RadioButton
                android:id="@+id/memberGold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gold" />

            <RadioButton
                android:id="@+id/memberSilver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Silver" />

            <RadioButton
                android:id="@+id/memberBiasa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Biasa" />
        </RadioGroup>

    </TableLayout>

    <EditText
        android:id="@+id/etKodeBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kode Barang"
        android:inputType="textCapCharacters"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        />

    <TextView
        android:id="@+id/tvDaftarBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Klik ini untuk Daftar Barang!"
        android:textColor="#008DDA"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        />

    <EditText
        android:id="@+id/etJumlahBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah Barang"
        android:inputType="number"
        android:paddingBottom="20dp"
        />

    <Button
        android:id="@+id/btnProses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proses"
        android:layout_gravity="center"
        android:textSize="20dp"
        />

</LinearLayout>